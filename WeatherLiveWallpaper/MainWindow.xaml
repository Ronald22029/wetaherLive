<Window x:Class="WeatherLiveWallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="WeatherWidgetPro" Height="800" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False" 
        BorderThickness="0"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="TimeItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10" Padding="5,0" Margin="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#60FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="ElWidget" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,50,0" CornerRadius="30" BorderBrush="#40FFFFFF" BorderThickness="1">
            <Border.Background>
                <SolidColorBrush Color="#202020"/>
            </Border.Background>

            <Grid ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgCieloActivo" Source="cielo.png" Stretch="UniformToFill" Opacity="1"/>
                    <Image x:Name="ImgCieloSiguiente" Stretch="UniformToFill" Opacity="0"/>
                </Grid>

                <Canvas x:Name="CanvasNubesFondo" IsHitTestVisible="False"/>

                <Grid VerticalAlignment="Bottom">
                    <Image x:Name="ImgMontanaActiva" Source="montañasuelo.png" Stretch="UniformToFill" VerticalAlignment="Bottom" Opacity="1"/>
                    <Image x:Name="ImgMontanaSiguiente" Stretch="UniformToFill" VerticalAlignment="Bottom" Opacity="0"/>
                </Grid>

                <Border CornerRadius="30">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.3"/>
                            <GradientStop Color="#A0000000" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <skia:SKElement x:Name="LienzoLluvia" PaintSurface="OnPintarLluvia" IsHitTestVisible="False"/>

                <Viewbox Stretch="Uniform" Margin="20">
                    <Grid Width="350">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📍 " Foreground="#FF6B6B" FontSize="20"/>
                                <TextBlock x:Name="TxtCiudad" Text="Cargando..." Foreground="White" FontSize="20" FontWeight="Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="4"/>
                                    </TextBlock.Effect></TextBlock>
                            </StackPanel>
                            <TextBlock x:Name="TxtFecha" Text="---" Foreground="#DDDDDD" FontSize="16" Margin="25,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20">
                            <TextBlock x:Name="TxtTemp" Text="--°" Foreground="White" FontSize="100" FontFamily="Segoe UI Light" HorizontalAlignment="Center" Margin="0,-20,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="3" BlurRadius="10" Color="Black" Opacity="0.5"/>
                                </TextBlock.Effect></TextBlock>
                            <TextBlock x:Name="TxtClimaDesc" Text="..." Foreground="White" FontSize="24" HorizontalAlignment="Center" FontWeight="SemiBold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Black" Opacity="0.5"/>
                                </TextBlock.Effect></TextBlock>
                            <TextBlock x:Name="TxtSensacion" Text="Sensación: --°" Foreground="#EEEEEE" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock x:Name="TxtHora" Text="--:--" Foreground="White" FontSize="50" HorizontalAlignment="Center" Margin="0,10,0,0" FontFamily="Segoe UI" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Black" Opacity="0.5"/>
                                </TextBlock.Effect></TextBlock>
                        </StackPanel>

                        <ListBox x:Name="ListaPronostico" Grid.Row="2" 
                                 Background="Transparent" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="False"
                                 SelectionChanged="ListaPronostico_SelectionChanged"
                                 PreviewMouseWheel="ListaPronostico_PreviewMouseWheel" 
                                 PreviewMouseDown="ListaPronostico_PreviewMouseDown"
                                 PreviewMouseMove="ListaPronostico_PreviewMouseMove"
                                 PreviewMouseUp="ListaPronostico_PreviewMouseUp"
                                 ItemContainerStyle="{StaticResource TimeItemStyle}"
                                 Margin="0,0,0,10" Height="90">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Background="Transparent"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" Width="60" Background="Transparent">
                                        <TextBlock Text="{Binding Hora}" Foreground="#AAA" FontSize="12" HorizontalAlignment="Center"/>
                                        <Image Source="{Binding IconoPath}" Width="35" Height="35" Margin="0,5"/>
                                        <TextBlock Text="{Binding Temp}" Foreground="White" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Border Grid.Row="3" Background="#30FFFFFF" CornerRadius="15" Padding="10" BorderBrush="#30FFFFFF" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="2">
                                    <TextBlock Text="Humedad" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtHumedad" Text="--%" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="2">
                                    <TextBlock Text="Viento" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtViento" Text="--" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="2">
                                    <TextBlock Text="Presión" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtPresion" Text="--" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="2">
                                    <TextBlock Text="Amanecer" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtAmanecer" Text="--" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="2">
                                    <TextBlock Text="Atardecer" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtAtardecer" Text="--" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="2">
                                    <TextBlock Text="Visibilidad" Foreground="#CCC" FontSize="10"/>
                                    <TextBlock x:Name="TxtVisibilidad" Text="--" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</Window>