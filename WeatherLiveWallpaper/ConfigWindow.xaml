<Window x:Class="WeatherLiveWallpaper.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="Configuración" Height="650" Width="950"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernBtn">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WidgetTileStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border x:Name="Bd" Width="110" Height="180" CornerRadius="8" Background="#252525" BorderBrush="#333" BorderThickness="1" ClipToBounds="True">
                                <Grid>
                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border VerticalAlignment="Bottom" Height="60">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#00000000" Offset="0"/>
                                                <GradientStop Color="#E6000000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Bottom" Foreground="White" FontSize="11" FontWeight="SemiBold" Margin="8,0,8,10" TextWrapping="Wrap" MaxHeight="35" TextTrimming="CharacterEllipsis" TextAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Border x:Name="Selection" Background="Transparent" CornerRadius="8" BorderThickness="3" BorderBrush="Transparent" Width="110" Height="180"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Selection" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Selection" Property="BorderBrush" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VideoTileStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border x:Name="Bd" Width="160" Height="100" CornerRadius="8" Background="#252525" BorderBrush="#333" BorderThickness="1" ClipToBounds="True">
                                <Grid>
                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border VerticalAlignment="Bottom" Height="40">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#00000000" Offset="0"/>
                                                <GradientStop Color="#E6000000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Bottom" Foreground="White" FontSize="11" FontWeight="SemiBold" Margin="8,0,8,6" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                </Grid>
                            </Border>
                            <Border x:Name="Selection" Background="Transparent" CornerRadius="8" BorderThickness="3" BorderBrush="Transparent" Width="160" Height="100"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Selection" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Selection" Property="BorderBrush" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#121212" CornerRadius="12" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#1A1A1A" CornerRadius="12,0,0,12" Padding="20">
                <StackPanel>
                    <TextBlock Text="CONFIGURACIÓN" Foreground="#666" FontWeight="Bold" FontSize="12" Margin="0,0,0,20"/>
                    <RadioButton x:Name="TabGeneral" Content="🌍 General" Foreground="White" FontSize="16" Margin="0,0,0,15" IsChecked="True" GroupName="Tabs" Checked="Tab_Checked" Style="{StaticResource {x:Type ToggleButton}}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"/>
                    <RadioButton x:Name="TabWidgets" Content="🎨 Biblioteca Widgets" Foreground="White" FontSize="16" Margin="0,0,0,15" GroupName="Tabs" Checked="Tab_Checked" Style="{StaticResource {x:Type ToggleButton}}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"/>
                    <RadioButton x:Name="TabFondos" Content="🎬 Biblioteca Videos" Foreground="White" FontSize="16" Margin="0,0,0,15" GroupName="Tabs" Checked="Tab_Checked" Style="{StaticResource {x:Type ToggleButton}}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" FontSize="16" Background="Transparent" Foreground="#888" BorderThickness="0" Cursor="Hand" Click="BtnCerrar_Click"/>

                <ScrollViewer x:Name="PanelGeneral" Visibility="Visible" Margin="0,30,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Preferencias Globales" Foreground="White" FontSize="24" FontWeight="Light" Margin="0,0,0,25"/>

                        <TextBlock Text="Ubicación (Ciudad):" Foreground="#AAA" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBox x:Name="TxtCiudad" Width="250" Height="35" Padding="10,0" Background="#222" Foreground="White" BorderBrush="#444" VerticalContentAlignment="Center" FontSize="14"/>
                            <Button Content="Guardar" Margin="10,0,0,0" Style="{StaticResource ModernBtn}" Click="BtnGuardarCiudad_Click"/>
                        </StackPanel>

                        <TextBlock Text="Unidad de Medida:" Foreground="#AAA" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                            <RadioButton x:Name="RadioC" Content="Celsius (°C)" Foreground="White" GroupName="Unit" Margin="0,0,20,0" FontSize="14" Checked="RadioUnit_Checked"/>
                            <RadioButton x:Name="RadioF" Content="Fahrenheit (°F)" Foreground="White" GroupName="Unit" FontSize="14" Checked="RadioUnit_Checked"/>
                        </StackPanel>

                        <Border Background="#1E1E1E" CornerRadius="10" Padding="15" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Text="💧 Personalización de Lluvia" Foreground="Gold" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="Velocidad de caída" Foreground="#AAA" FontSize="12"/>
                                        <Slider x:Name="SliderSpeed" Minimum="0.5" Maximum="3.0" Value="1.0" Margin="0,5,0,15" ValueChanged="RainParam_ValueChanged"/>
                                        <TextBlock Text="Tamaño de gotas" Foreground="#AAA" FontSize="12"/>
                                        <Slider x:Name="SliderSize" Minimum="0.5" Maximum="2.5" Value="1.0" Margin="0,5,0,15" ValueChanged="RainParam_ValueChanged"/>
                                        <TextBlock Text="Viento (Inclinación)" Foreground="#AAA" FontSize="12"/>
                                        <Slider x:Name="SliderWind" Minimum="-20" Maximum="20" Value="0" Margin="0,5,0,15" ValueChanged="RainParam_ValueChanged"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" Background="#111" CornerRadius="8" BorderBrush="#333" BorderThickness="1" Height="140" ClipToBounds="True">
                                        <Grid>
                                            <Image Source="pack://application:,,,/nublado.png" Stretch="UniformToFill" Opacity="0.4"/>
                                            <skia:SKElement x:Name="PreviewLluvia" PaintSurface="OnPintarPreviewLluvia"/>
                                            <TextBlock Text="VISTA PREVIA" Foreground="#666" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Opciones de Sistema:" Foreground="#AAA" Margin="0,0,0,10"/>
                        <CheckBox x:Name="CheckWidget" Content="Mostrar Widget en Escritorio" Foreground="White" FontSize="14" Checked="CheckWidget_Changed" Unchecked="CheckWidget_Changed"/>
                    </StackPanel>
                </ScrollViewer>

                <Grid x:Name="PanelWidgets" Visibility="Hidden" Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Biblioteca de Widgets" Foreground="White" FontSize="24" FontWeight="Light" Margin="0,0,0,10"/>
                    <Border Grid.Row="1" Background="#181818" CornerRadius="8" Padding="10">
                        <ListBox x:Name="ListThemes" Background="Transparent" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                 ItemContainerStyle="{StaticResource WidgetTileStyle}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Border>
                    <Button Grid.Row="2" Content="✅ Aplicar Widget" HorizontalAlignment="Right" Background="#007ACC" Foreground="White" Padding="20,10" Margin="0,15,0,0" Click="BtnAplicarTema_Click"/>
                </Grid>

                <Grid x:Name="PanelFondos" Visibility="Hidden" Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Biblioteca de Videos" Foreground="White" FontSize="24" FontWeight="Light" Margin="0,0,0,20"/>
                    <Border Grid.Row="1" Background="#181818" CornerRadius="8" Padding="10">
                        <ListBox x:Name="ListVideos" Background="Transparent" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                 ItemContainerStyle="{StaticResource VideoTileStyle}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Border>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="+ Importar Video" Style="{StaticResource ModernBtn}" Margin="0,0,10,0" Click="BtnImportar_Click"/>
                        <Button Content="🗑 Eliminar" Background="#552222" Foreground="White" Padding="15,5" Margin="0,0,10,0" Click="BtnEliminar_Click"/>
                        <Button Content="▶ Aplicar Fondo" Background="#007ACC" Foreground="White" Padding="20,10" Click="BtnUsarVideo_Click"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>