<Window x:Class="WeatherLiveWallpaper.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración" Height="300" Width="500"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="15" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Configuración del Widget" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <CheckBox x:Name="ToggleGadget" Content="Mostrar Widget" 
                          Foreground="White" FontSize="16" Margin="0,0,0,15"
                          Checked="ToggleGadget_Checked" Unchecked="ToggleGadget_Unchecked">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="Border" Width="40" Height="20" CornerRadius="10" Background="#444" BorderBrush="#555" BorderThickness="1" Margin="0,0,10,0"/>
                                            <Ellipse x:Name="Knob" Width="16" Height="16" Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Left"/>
                                                <Setter TargetName="Knob" Property="Margin" Value="22,0,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <Button Content="Cambiar Video de Fondo" Height="40" Margin="0,10,0,0"
                        Background="#333" Foreground="White" Click="BtnCargarVideo_Click"/>

                <Button Content="Cerrar" Height="40" Margin="0,20,0,0"
                        Background="#D32F2F" Foreground="White" Click="BtnCerrar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>