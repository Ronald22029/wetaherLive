<Window x:Class="WeatherLiveWallpaper.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración" Height="550" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SwitchStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="50" Height="26" Background="Transparent">
                            <Border x:Name="Border" CornerRadius="13" Background="#444" BorderBrush="#555" BorderThickness="1"/>
                            <Ellipse x:Name="Knob" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="3,0,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Knob" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="⚙ Configuración" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Border Grid.Row="1" Background="#2A2A2A" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#333" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="60" Height="90" CornerRadius="5" ClipToBounds="True" Background="#111" Margin="0,0,15,0">
                        <Viewbox Stretch="Uniform">
                            <Grid Width="350" Height="600">
                                <Image Source="cielo.png" Stretch="UniformToFill" Opacity="0.8"/>
                                <Image Source="montañasuelo.png" VerticalAlignment="Bottom" Stretch="UniformToFill"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="24°" Foreground="White" FontSize="100" HorizontalAlignment="Center" FontFamily="Segoe UI Light"/>
                                    <TextBlock Text="Soleado" Foreground="White" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Viewbox>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Weather Widget Pro" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="Activa el gadget de clima en tu escritorio." Foreground="#999" FontSize="12"/>
                    </StackPanel>

                    <CheckBox x:Name="ToggleWidget" Grid.Column="2" Style="{StaticResource SwitchStyle}" 
                              Checked="ToggleWidget_Checked" Unchecked="ToggleWidget_Unchecked" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="#252525" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#333" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="📁 Biblioteca de Videos" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ListBox x:Name="ListVideos" Grid.Row="1" Background="#151515" BorderThickness="0" Foreground="White" Margin="0,0,0,10">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="+ Importar Video" Click="BtnImportar_Click" Background="#444" Foreground="White" Padding="10,5" Margin="0,0,10,0" BorderThickness="0"/>
                        <Button Content="✅ Usar" Click="BtnUsar_Click" Background="#2196F3" Foreground="White" Padding="10,5" Margin="0,0,10,0" BorderThickness="0"/>
                        <Button Content="🗑 Eliminar" Click="BtnEliminar_Click" Background="#F44336" Foreground="White" Padding="10,5" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Button Grid.Row="3" Content="Cerrar" Click="BtnCerrar_Click" HorizontalAlignment="Right" Width="100" Height="35" Background="Transparent" Foreground="#AAA" BorderThickness="1" BorderBrush="#444"/>
        </Grid>
    </Border>
</Window>